/dts-v1/;

#include "sc7280.dtsi"

/ {
	model = "Qualcomm Technologies, Inc. sc7280 IDP platform";
	compatible = "qcom,sc7280-idp", "qcom,sc7280";

	aliases {
		serial0 = &uart5;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};
};

&qupv3_id_0 {
	status = "okay";
};

&uart5 {
	status = "okay";
};

/* PINCTRL - additions to nodes defined in sc7280.dtsi */

&qup_uart5_default {
	tx {
		pins = "gpio46";
		drive-strength = <2>;
		bias-disable;
	};

	rx {
		pins = "gpio47";
		drive-strength = <2>;
		bias-pull-up;
	};
};
