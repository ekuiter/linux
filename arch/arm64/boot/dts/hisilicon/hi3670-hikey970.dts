/dts-v1/;

#include "hi3670.dtsi"
#include "hikey970-pinctrl.dtsi"

/ {
	model = "HiKey970";
	compatible = "hisilicon,hi3670-hikey970", "hisilicon,hi3670";

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
		serial2 = &uart2;
		serial3 = &uart3;
		serial4 = &uart4;
		serial5 = &uart5;
		serial6 = &uart6;       /* console UART */
	};

	chosen {
		stdout-path = "serial6:115200n8";
	};

	memory@0 {
		device_type = "memory";
		/* expect bootloader to fill in this region */
		reg = <0x0 0x0 0x0 0x0>;
	};
};

&uart0 {
	/* On High speed expansion header */
	label = "HS-UART0";
	status = "okay";
};

&uart2 {
	/* On Low speed expansion header */
	label = "LS-UART0";
	status = "okay";
};

&uart6 {
	/* On Low speed expansion header */
	label = "LS-UART1";
	status = "okay";
};
