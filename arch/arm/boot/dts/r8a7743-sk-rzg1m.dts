/dts-v1/;
#include "r8a7743.dtsi"

/ {
	model = "SK-RZG1M";
	compatible = "renesas,sk-rzg1m", "renesas,r8a7743";

	aliases {
		serial0 = &scif0;
	};

	chosen {
		bootargs = "ignore_loglevel";
		stdout-path = "serial0:115200n8";
	};

	memory@40000000 {
		device_type = "memory";
		reg = <0 0x40000000 0 0x40000000>;
	};

	memory@200000000 {
		device_type = "memory";
		reg = <2 0x00000000 0 0x40000000>;
	};
};

&extal_clk {
	clock-frequency = <20000000>;
};

&scif0 {
	status = "okay";
};
