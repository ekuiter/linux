&adc1 {
	status = "okay";
};

/*
 * ADC2 is not available on the Aster board and
 * conflicts with AD7879 resistive touchscreen.
 */
&adc2 {
	status = "disabled";
};

&fec1 {
	status = "okay";
};

&i2c4 {
	status = "okay";

	/* M41T0M6 real time clock on carrier board */
	rtc: rtc@68 {
		compatible = "st,m41t0";
		reg = <0x68>;
	};
};

&pwm1 {
	status = "okay";
};

&pwm2 {
	status = "okay";
};

&pwm3 {
	status = "okay";
};

&pwm4 {
	status = "okay";
};

&uart1 {
	status = "okay";
};

&uart2 {
	status = "okay";
};

&uart3 {
	status = "okay";
};

&usbotg1 {
	status = "okay";
};

/* Colibri MMC/SD */
&usdhc1 {
	status = "okay";
};
